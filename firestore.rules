rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For this demo app, we allow public read/write to the referrals collection.
    // In a production app, you would want to implement more robust security rules,
    // potentially using server-side validation to prevent abuse.
    match /referrals/{referralId} {
      allow read: if true;
      allow write: if true;
    }

    // Rules for claimed numbers
    match /claimed_numbers/{phoneNumber} {
      // Allow a client to check if a phone number has been claimed.
      allow get: if true;
      // Allow a client to claim a number only if it hasn't been claimed before.
      allow create: if true;
    }
  }
}
